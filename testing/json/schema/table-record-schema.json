{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "#/table-record-schema.json",
    "type": "object",
    "title": "A table record",
    "description": "The definition of a table record, pairing column name with its value",
    "patternProperties": {
        "^[a-zA-Z_$0-9]+": {
            "type": [
                "integer",
                "number",
                "string",
                "boolean",
                "null"
            ]
        }
    },
    "examples": [
        {
            "U_NAME": "Mike",
            "U_PASS": "pass123"
        },
        {
            "id": 2,
            "user_name": "Mike",
            "registration_date": null
        }
    ]
}